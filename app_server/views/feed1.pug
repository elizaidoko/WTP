nav.navbar.navbar-expand-md
  a.navbar-brand(href='#') Logo
  button.navbar-toggler.navbar-light(type='button' data-toggle='collapse' data-target='#main-navigation')
    span.navbar-toggler-icon  
  #main-navigation.collapse.navbar-collapse
    ul.navbar-nav
      li.nav-item
        a.nav-link(href='/') Home
      li.nav-item
        a.nav-link(href='/login') Login
      li.nav-item
        a.nav-link(href='/register') Register
.container.features
  h2=pageHeader.title
  .row
    .col-lg-5.col-md-5.col-sm-12

      each party in parties
	  
        h3.feature-title=parties.title
        img.img-fluid(src='images/party1.jpg')
        p= parties.description
        p
          span.subinfo Where: 
          #{parties.where}
        p
          span.subinfo When: 
          #{parties.when}
  
