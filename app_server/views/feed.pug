extends layout 
block content
  .container-fluid.features
    h2=strapline
    .row
      each event in events
        .col-md-6
          h3.feature-title= event.name 
          
          img.img-fluid(src= event.imagelocation alt='partyimage')
          
          p= event.description
          p
            span.subinfo Where: #{event.where} #{event.imageLocation}

          p
            span.subinfo When: #{event.when}