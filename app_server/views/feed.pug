extends layout 
block content
  .container.features
    h2=strapline
    .row
    each event in events
      .col-lg-12
        h3.feature-title= event.name
        img.img-fluid(src= event.imagelocation alt='partyimage')
        p= event.description
        p
          span.subinfo Where: #{event.where}

        p
          span.subinfo When: #{event.when}